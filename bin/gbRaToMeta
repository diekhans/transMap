#!/usr/bin/awk -f
#
#  gbRaToMeta srcDb
#   get metadata from genbank ra files
#
BEGIN {
    OFS = "\t";
    srcDb = ARGV[1]
    ARGV[1] = ""
}
/^acc / {acc = $2}
/^ver / {ver = $2}
/^cds / {cds = $2}
/^gen/ {gen = $2}
/^mol/ {mol = gensub("^.*-","","g",$2)}
/^$/ {
    print srcDb":"acc"."ver,cds,gen,mol;
    acc=ver=cds=gen=mol="";
}
