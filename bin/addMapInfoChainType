#!/usr/bin/awk -f
#
#  addMapInfoChainType -v chainType=type [mapInfo] ..
#
# add chainType column to a pslMap mapInfo file
BEGIN {
    FS = "\t";
    OFS = "\t";
    if (chainType == "") {
        print "Error: -v chainType=type not specified" > "/dev/stderr";
        exit(1);
    }
}

FNR==1 {
    print $0,"chainType";
}
FNR > 1 {
    print $0,chainType;
}
